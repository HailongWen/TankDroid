<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="systems.machek.tankdroid.Main">

    <Button
        android:text="MJPEG Cockpit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fullScreenButton"
        android:layout_alignParentEnd="true"
        android:onClick="launchFullScreen" />

    <Button
        android:text="H.264 Cockpit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullScreenButton"
        android:layout_alignParentStart="true"
        android:id="@+id/button3"
        android:layout_alignParentEnd="true"
        android:onClick="launchFullScreenH264" />

    <Button
        android:text="ScrollableCockpit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:id="@+id/tabbedCockpitButton"
        android:layout_alignParentEnd="true"
        tools:onClick="launchTabbedCockpit"
        android:onClick="launchTabbedCockpit" />

    <Button
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabbedCockpitButton"
        android:layout_alignParentStart="true"
        android:id="@+id/button"
        android:layout_alignParentEnd="true"
        android:onClick="launchTest" />

</RelativeLayout>
